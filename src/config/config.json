{
    "ssl": {
        "enabled": SSL,
        "key": "/cdr/cert/wss.pem",
        "cert": "/cdr/cert/wss.pem",
        "port": 10023
    },
    "server": {
        "host": "0.0.0.0",
        "port": 10021
    },
    "redis": {
        "host": "REDIS_HOST",
        "port": "6379",
        "db_index": 15
    },
    "cdrDB": {
        "uri": "mongodb://MONGODB_HOST:27017/webitel",
        "collectionCDR": "cdr",
        "collectionFile": "cdrFile"
    },
    "application": {
        "log": {
            "loglevel": "LOGLEVEL",
            "file": "/logs/cdr.log",
            "maxSize": 30000,
            "maxFiles": 5,
            "logstash": {
                "enabled": LOGSTASH,
                "host": "LOGSTASH_HOST",
                "port": 28777,
                "node_name": "cdr"
            }
        },
        "auth": {
            "tokenSecretKey": "TOKEN_KEY",
            "expiresDays": 7
        },
        "resource": {
            "path": "/cdr/resource/sounds/"
        }
    },
    "recordFile": {
        "transport": "STORAGE",
        "fileRoot": "/STORAGE_ROOT/",
        "maskPath": "$Y/$M/$D/$H",
        "awsConfig": {
            "accessKeyId": "S3_KEY_ID",
            "secretAccessKey": "S3_KEY_SECRET"
        }
    },
    "uploadAcl": {
        "mode": "allow",
        "ip": "ACL_UPLOAD"
    }
}